
<%# ---- FULL CONTAINER FOR ALL ---- %>
<div class="results col-lg-12 mb-3 mt-5 pt-5">
  <%# ---- PART ONE ::: ARTIST BIO ---- %>
  <div class="intro rounded col-lg-6 text-white">
    <h2><%= @artist.name %></h2>  
      <h6><%= @artisttags[0]["name"]%> • <%=@artisttags[1]["name"]%> • <%=@artisttags[2]["name"] %> </h6>
      <p><%= truncate( @artistbio, escape: false, length: 450) %></p>
      <p><%=link_to "Read more...", @artistlastfm["url"] , target: "_blank", rel: "nofollow" %></p>
  </div>

  <%# ---- PART 2 :: MUSIC PLAYER COMPONENT ---- %>
  <div class="player d-flex flex-wrap col-lg-12 mt-3 mb-3 rounded shadow bg-light">
    <div class="col-lg-12 pt-2 border">
      <h3>Here are the most popular tracks by <%= @artist.name %></h3>
      <p>Give em a listen!</p>
    </div>
    <%# ---- 2AAA TRACK PLAYLIST ---- %>
    <div class="tracklist row col-lg-4 p-1 ml-1 justify-content-center">
      <h4 class="text-centered mt-1 p-1">Top Tracks</h4>
        <div id='custabrow' class="p-2 table table-hover table-striped rounded">
          <% @tracks.each_with_index do |track, i| %>
              <button class="playerbuttons text-left btn btn-outline-primary m-1 w-100">
              <%= link_to "/artists/#{@artist.id}/#{i}", id: "#{i}", remote: true, :class => "button" do %>

                <i class="playbutton fas fa-play "> </i> 
                <i class="soundbutton fas fa-volume-up"></i>

                <%= truncate( track.name, length: 30) %></button>
              <% end %>
          <% end %>
        </div>
      
    </div>
    <%# ---- 2BBB EMBED VIDEO HERE ---- %>
    <div class="videoplayer justify-content-center row col-lg-8 mx-auto p-3">
      <div id="videodiv" class="p-2">  
      
        <iframe width="520" height="295" type="text/html" src="https://www.youtube.com/embed/<%= @videoDefault %>?autoplay=0" frameborder="0" allow="autoplay"></iframe>
      </div>
    </div>
  </div>

    <%#----PART 3 SIMILAR ARTISTS -----%>
  <div class="similar d-flex flex-wrap col-lg-12 mt-3 mb-3 rounded shadow bg-light">
      <h3 class="d-flex col-lg-12">Here are the some related artists for <%= @artist.name %></h3>

    <div class="player d-flex col-lg-12 mt-4 row rounded shadow bg-light"> 
        <% @getsimilar.each do |similar| %>
        <div class="col-lg-4">
        <p> <%= similar["name"] %></p>
        <p><%= image_tag("#{similar['image'][3]["content"]}") %></p>  
      </div> 
      <% end %>
    </div> 
    
    </div>

  </div>

  </div>
